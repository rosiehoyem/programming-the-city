<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Media</h1>

  <table class="table table striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Url</th>
        <th>Description</th>
        <th>Person</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @media.each do |medium| %>
        <tr>
          <td><%= medium.name %></td>
          <td><%= medium.type %></td>
          <td><%= medium.url %></td>
          <td><%= medium.description %></td>
          <td><%= medium.person %></td>
          <td><%= link_to 'Show', medium %></td>
          <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
          <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Medium', new_medium_path %>
</div>